                            <div class='IMG flex justify-end'>
                                <img src="https://picsum.photos/400/300" alt="" class="order-2 relative rounded-tl-3xl">
                                <div class="promo  text-yellow-500 bg-gray-50 rounded-bl-2xl font-bold text-xl text-right absolute p-4 ">{{promo.promotion}}</div>
                            </div>
                            <div class="">
                                <div class='p-6'>
                                    <div class="flex items-start justify-between mb-2">
                                        <div class="font-semibold text-xl">{{promo.title}}</div>
                                        <div class="font-semibold text-xl w-1/4">
                                            {{promo.tarif}}
                                            <i class="text-base fa-solid fa-euro-sign"></i>
                                        </div>
                                    </div>
                                    <div class="text-sm font-medium mb-2">{{promo.lieux}}</div>
                                    <div class="text-justify text-base">{{promo.description}}</div>
                                </div>
                            </div>                            
                        </div>   
                {% endfor %}
                 </div>
            {% endfor %}  
             </div>             
        </div>
        {# --------------------------------------------------#}        
        </section>
        
        <section id="hebergement" class="mx-auto w-11/12">
        {# Chercher la requette sql qui affiche tout les hebergement #}
        
        <div class="text-center font-bold text-2xl mb-12">
            Trouvez l'hébergement qui vous correspond parmis notre sélection
        </div>
        <div class="grid grid-rows-4 grid-flow-col gap-4 justify-between w-11/12 mx-auto">
            {% for hebergement in hebergements %}
            <div class=" w-4/5 mx-4 my-12 shadow-xl bg-gray-100 rounded-bl-3xl rounded-tr-3xl relative order-2">  
                <div>
                    {# Image du logement avec montage carte de la région inclus dedans #}
                    <img src="{{hebergement.picture}}" alt="{{hebergement.title}}" class="rounded-tr-3xl">  
                    <div class=" p-6 h-52 ">
                        <div class="flex items-start justify-between mb-2 ">
                            <div class="font-semibold text-xl">{{hebergement.title}}</div>
                            <div class="font-semibold text-xl w-1/4">
                                {{hebergement.tarif}}
                                <i class="text-base fa-solid fa-euro-sign"></i>
                            </div>
                        </div>
                        <div class="text-sm font-medium mb-2">{{hebergement.lieux}}</div>
                        <div class="text-justify text-base">{{hebergement.description}}</div>                    
                    </div>
                </div>      
                
                <div class="flex justify-center  ">
                    <a class=" py-4 px-28 absolute order-1 bg-red-400 -bottom-8" href="/hebergement/{{hebergement.id}}">Choisir</a>
                </div>                
            </div>
            
           {% endfor %}
