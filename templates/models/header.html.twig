{% if Home_page is defined%}
<header class=" mb-12 flex flex-col  overflow-hidden h-screen" >
    {% include 'partials/navbar.html.twig'%}    
    <div class ='flex justify-center items-center relative  h-full'>
        <div class="relative {{ class_header }} w-full">
            <img src="{{header_scr}}" alt="{{title_h1}}" class="w-full object-none object-center relative  order-2 -z-2">
            <div class =" h-full bg-black opacity-20 w-full relative order-1 -z-1"></div> 
