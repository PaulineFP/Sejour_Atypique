                <i class="fa-solid fa-angle-left"></i>
            </button>
            <button type="button" class="carousel-button next" data-carousel-button="next">
                <i class="fa-solid fa-angle-right"></i>
            </button>
            <div class="flex justify-between w-11/12 mx-auto " data-slides>
            {% for group_promo in group_promos %}
                {# ajoute un attribut si condition, sinon rien #} 
                <div class=" slide "  {{ loop.index0 is same as(0) ? "data-active" : "" }}> 
                    {% for promo in group_promo %}
